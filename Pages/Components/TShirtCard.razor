<style>
    .tshirt-option {
        text-align: center;
        padding: 20px;
        border: 1px solid #fff;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
    }

    .tshirt-option img {
        width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .tshirt-button {
        background: #ff00cc;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2rem;
        text-transform: uppercase;
    }
</style>

<div class="col">
    <div class="card tshirt-option" style="width: 25rem;">
        <img src="@ImageSrc" class="card-img-top" alt="@AltText">
        <button class="tshirt-button">Customize</button>
    </div>
</div>


@code {
    [Parameter]
    public string ImageSrc { get; set; }

    [Parameter]
    public string AltText { get; set; }
}